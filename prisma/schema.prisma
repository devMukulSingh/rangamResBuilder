 

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  id              Int               @id@default(autoincrement())
  goal            String
  personalInfo    PersonalInfo?     @relation("userToPersonalInfo")
  skills          Skills[]          @relation("userToSkills")
  experiences     Experience[]      @relation("userToExperience")
  educations      Education[]       @relation("userToEducation")
  contacts        Contact?          @relation("userToContact")
  achievements    Achievement?      @relation("userToAchievement")
  projects        Project[]         @relation("userToProject")
  languages       Language[]        @relation("userToLanguage")
}

model PersonalInfo{
  id                    Int               @id@default(autoincrement())
  userId                Int               @unique
  user                  User              @relation("userToPersonalInfo",fields: [userId],references: [id])
  name                  String
  email                 String
  jobTitle              String
  countryCode           String
  mobile                Int
  state                 String? 
  address               String? 
  dob                   String? 
  birthPlace            String? 
  city                  String? 
}

model Skills{
  id                      Int                       @id@default(autoincrement())
  skillName               String                    
  userId                  Int                        @unique
  user                    User                      @relation("userToSkills",fields: [userId],references: [id])
}

model Experience{
  id                              Int                       @id@default(autoincrement())
  userId                          Int                    
  user                            User                      @relation("userToExperience",references: [id],fields: [userId])
  companyName                     String?
  jobTitle                        String?
  startDate                       String?
  endDate                         String?
  checkboxWorkingStatus           Boolean?
  checkboxVolunteering            Boolean?
  checkboxInternship              Boolean?
  description                     String?
  competences                     Competence[]              @relation("experienceToCompetence")
  address                         String?
  employer                        String?
}

model Competence{
  id                              Int                       @id@default(autoincrement())
  name                            String?
  experienceId                    Int
  experience                      Experience                @relation("experienceToCompetence",fields: [experienceId],references: [id])
}
model Education{
  id                              Int                       @id@default(autoincrement())
  schoolName                      String
  degree                          String
  speciality                      String
  startDate                       String
  endDate                         String?
  checkboxPursuing                Boolean?
  schoolLocation                  String?
  userId                          Int                    
  user                            User                      @relation("userToEducation",references: [id],fields: [userId])
}

model Contact{
  id                              Int                       @id@default(autoincrement())
  userId                          Int                       @unique
  user                            User                      @relation("userToContact",references: [id],fields: [userId])
  linkedIn                        String?
  github                          String?
  twitter                         String?
  portfolio                       String?
}

model Achievement{
  id                              Int                       @id@default(autoincrement())
  userId                          Int                       @unique
  user                            User                      @relation("userToAchievement",references: [id],fields: [userId])
  name                            String?
}

model Project{
  id                              Int                       @id@default(autoincrement())
  userId                          Int                       @unique
  user                            User                      @relation("userToProject",references: [id],fields: [userId])
  projectName                     String?
  projectUrl                      String?
  description                     String?
}

model Language{
  id                              Int                       @id@default(autoincrement())
  userId                          Int                       @unique
  user                            User                      @relation("userToLanguage",references: [id],fields: [userId])
  name                            String?
  strength                        String?
}